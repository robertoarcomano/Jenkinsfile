stage("secondJenkinsfile") {
    echo "I'm secondJenkinsfile"
    docker.image("bash").inside() {
        def file = readFile "/etc/hosts"
        echo "Showing file contents..."
        echo file
        sh("cat /etc/hosts")
        sh("ls -al")
        sh("pwd")
        sh("ls -al /var/run/docker.sock")
        sh("df -h")
        sh("mount")
        sh("hostname")
    }
}